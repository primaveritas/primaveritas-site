---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Contact | Prima Veritas">

<main class="flex-1">

  <!-- HERO -->
  <section class="border-b border-white/10">
    <div class="max-w-6xl mx-auto px-6 py-10">
      <h1 class="font-sans text-4xl md:text-5xl tracking-tight text-off-white leading-tight">
        Contact
      </h1>

      <p class="mt-6 max-w-4xl text-xl text-off-white/80">
        Direct communication. No automation layers.
      </p>
    </div>
  </section>


  <!-- CONTACT DETAILS -->
  <section>
    <div class="max-w-6xl mx-auto px-6 py-10">

      <div class="max-w-4xl text-sm text-off-white/80 space-y-6">

        <div>
          <h2 class="text-lg font-sans tracking-tight text-off-white">
            Bryan Ziehl
          </h2>
          <p class="mt-3">
            Email: <a href="mailto:info@primaveritas.io" class="hover:text-[var(--accent)] transition-colors">
              info@primaveritas.io
            </a>
          </p>
          <p>
            Phone: (555) 010-4823
          </p>
        </div>

      </div>

    </div>
  </section>

</main>

</Layout>